{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "core-js",
      "firebase"
    ]
  },

  "files": [
    "tmp/app/app.module.ts",
    "tmp/main.ts",
    "tmp/typings.d.ts"
  ],

  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit" : true
  }
}
